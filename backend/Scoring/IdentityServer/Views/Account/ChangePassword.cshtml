@model ChangePasswordModel


<div class="container formcontainer change-password">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <h1>Գաղտնաբառի փոփոխում</h1>
        </div>
    </div>

    <form id="form" onsubmit="return validateForm(this);" asp-route="ChangePassword">
        @Html.Partial("_ValidationSummary")
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="row formblock">
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><label for="text">Մուտքանուն</label></div>
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><label for="text">@Model.Username</label></div>
        </div>
        <div class="row formblock">
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><label for="text">Ընթացիկ գաղտնաբառ</label></div>
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><input type="password" req="true" class="form-control" asp-for="OldPassword"></div>
        </div>
        <div class="row formblock">
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><label for="text">Նոր գաղտնաբառ</label></div>
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><input type="password" id="newPass" req="true" class="form-control" asp-for="NewPassword"></div>
        </div>
        <div class="row formblock">
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><label for="text">Կրկնել նոր գաղտնաբառը</label></div>
            <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3"><input type="password" id="reNewPass" match="#newPass" req="true" class="form-control" asp-for="ConfirmNewPassword"></div>
        </div>
        <div class="actions">
            <button class="btn btn-cancel" type="button" id="btnCancel">Չեղարկել</button>
            <button class="btn btn-default" type="submit">Հաստատել</button>
        </div>
    </form>
</div>
@section scripts
{
    <script>
        var cancelButton = document.getElementById("btnCancel");
        var returnUrl = document.getElementById("ReturnUrl");
        if (cancelButton
            && returnUrl) {
            cancelButton.onclick = function () {
                window.location = returnUrl.value;
            }
        }
    </script>
}
