{
  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Debug",
      "System": "Debug",
      "Microsoft": "Debug",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "Authentication": {
    "Authority": "http://localhost:5000/"
  },
  "RequestProxy": {
    "Policies": [
      {
        "Name": "customerApi",
        "LocalPath": "/api/customer",
        "RemoteUrlBase": "http://localhost:5001/"
      },
      {
        "Name": "loanApi",
        "LocalPath": "/api/loan",
        "RemoteUrlBase": "http://localhost:5508/"
      }
    ]
  }
}
