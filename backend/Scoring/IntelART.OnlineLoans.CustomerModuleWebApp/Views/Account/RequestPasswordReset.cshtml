@model IntelART.OnlineLoans.CustomerModuleWebApp.Controllers.Authentication.RequestPasswordResetModel

<div style="position:absolute; top:0px; bottom:0px; width:100%; background:#F1F1F1; z-index:0;">
    <div class="container userprofile login-reg">
        @if (ViewContext.ModelState.IsValid == false)
        {
        <div class="alert alert-danger">
            <div asp-validation-summary="All" class="danger"></div>
        </div>
        }
        <div class="login-body">
            <div class="tab-content">
                <div id="login">
                    <div class="login-block">
                        <div class="loginreg-content">
                            Եթե չեք հիշում Ձեր գաղտնաբառը, մուտքագրեք այն հեռախոսահամարը, որն օգտագործել եք գրանցման ժամանակ, և այդ համարին կուղարկվի քառանիշ կոդ՝ գաղտնաբառը վերականգնելու համար։
                            <form id="PasswordResetRequestForm" asp-action="RequestPasswordReset">
                                <div class="form-group">
                                    <div class="tandem">
                                        <div class="phonefield">
                                            <span class="country-code">374</span>
                                            <input placeholder="XX XXX XXX" maxlength="8" type="text" class="form-control" asp-for="Phone" id="registerPhone">
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="login-footer">
                                    <a asp-action="Login">Վերադառնալ</a>
                                    <button type="submit" class="btn btn-success">Հաստատել</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
                </div>
            </div>
</div>

<script type="text/javascript">
    $(function () {
        let form = $("#PasswordResetRequestForm")[0];
        if (form) {
            form.addEventListener("submit", function () {
                let btn = $(this).find(":submit")[0];
                if (btn) {
                    btn.disabled = true;
                }
            });
        }
    });
</script>